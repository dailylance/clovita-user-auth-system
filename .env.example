NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/clovita

# Security
JWT_SECRET=replace-with-strong-secret
BCRYPT_ROUNDS=12

# Basic Auth (for admin endpoints)
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=secure-admin-password

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Global Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE=memory
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
LOG_REQUESTS_TO_DB=false
LOG_DB_SAMPLE_RATE=0
LOG_DB_MAX_BODY_LENGTH=2000
PRISMA_LOG_QUERIES=false

# Cache
ENABLE_CACHE=true
CACHE_TTL_SECONDS=60
CACHE_MAX_ITEMS=10000

# Auth lifetimes
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30

# Auth behavior
ENFORCE_EMAIL_VERIFIED_ON_LOGIN=false

# Refresh cookie (browser-friendly)
ENABLE_REFRESH_COOKIE=true
REFRESH_COOKIE_NAME=refresh_token
REFRESH_COOKIE_PATH=/
# REFRESH_COOKIE_DOMAIN=.example.com

# Email (Gmail App Password)
ENABLE_EMAIL=false
EMAIL_FROM="Clovita <youraddress@gmail.com>"
SMTP_USER=youraddress@gmail.com
SMTP_PASS=your_app_password
# App base URL to build links in emails
APP_BASE_URL=http://localhost:5173
