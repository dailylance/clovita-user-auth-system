NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/express_template"

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Basic Auth (for admin endpoints)
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=secure-admin-password

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Auth lifetimes
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30

# App base URL for email links
APP_BASE_URL=http://localhost:3000

# Email (Nodemailer + Gmail with App Password)
ENABLE_EMAIL=false
EMAIL_FROM="Clovita <youraddress@gmail.com>"
SMTP_USER=youraddress@gmail.com
SMTP_PASS=your_app_password
